<button onclick="Show1()">Show</button>
<p id="num3"></p>

<script>
function Show1(){
 var x="";
 var y=document.getElementById("sif").value;
 for (i=1; i<=15; i++){
 x=x+""+y+" X "+i+"="+y*i+"</br>";
 }
 document.getElementById("num3").innerHTML = x;
}
</script>
